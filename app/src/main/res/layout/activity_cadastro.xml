<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/colorPrimaryDark"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CadastroActivity">

    <EditText
        android:id="@+id/txtBanco"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="55dp"
        android:layout_marginEnd="58dp"
        android:layout_marginBottom="503dp"
        android:background="#ffffff"
        android:ems="10"
        android:inputType="text|textNoSuggestions"
        android:hint="Nome da chave..." />

    <Button
        android:id="@+id/btnGravar"
        android:layout_width="121dp"
        android:layout_height="58dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="27dp"
        android:layout_marginEnd="58dp"
        android:layout_marginBottom="344dp"
        android:layout_toEndOf="@+id/btnReset"
        android:backgroundTint="@color/colorPrimary"
        android:text=" Gravar "
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/btnReset"
        android:layout_width="121dp"
        android:layout_height="58dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="54dp"
        android:layout_marginBottom="345dp"
        android:backgroundTint="@color/colorPrimary"
        android:text="Limpar"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/textview"
        android:layout_width="213dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="54dp"
        android:layout_marginEnd="144dp"
        android:layout_marginBottom="559dp"
        android:text="Nome da Chave/Banco" />

    <EditText
        android:id="@+id/txtPix"
        android:layout_width="wrap_content"
        android:layout_height="53dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="55dp"
        android:layout_marginEnd="58dp"
        android:layout_marginBottom="430dp"
        android:background="#ffffff"
        android:ems="10"
        android:inputType="text|textNoSuggestions"
        android:hint="Sua chave PIX..." />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="209dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="54dp"
        android:layout_marginEnd="122dp"
        android:layout_marginBottom="484dp"
        android:text="Chave PIX" />

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView_cadastro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:visibility="visible"
        app:adSize="BANNER"
        app:adUnitId="ca-app-pub-2381321693293442/1118859608"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="MissingConstraints"/>


</RelativeLayout>