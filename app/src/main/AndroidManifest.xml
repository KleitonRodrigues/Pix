<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.br.pix">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ico"
        android:label="@string/app_name"
        android:screenOrientation="portrait"
        android:roundIcon="@drawable/ico"
         android:theme="@style/AppTheme">
        <activity android:name=".CadastroActivity" android:screenOrientation="portrait"></activity>
        <activity android:name=".SplashActivity"  android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".FazerActivity"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".ComoActivity"
            android:screenOrientation="portrait"
            ></activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-2381321693293442~5322529193" />
    </application>

</manifest>